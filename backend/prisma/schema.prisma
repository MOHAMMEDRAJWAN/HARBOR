generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                     Int             @id @default(autoincrement())
  email                  String          @unique
  password               String
  role                   Role
  createdAt              DateTime        @default(now())
  address                String
  businessName           String?
  name                   String
  phone                  String
  creditLimit            Float           @default(0)
  creditStatus           CreditStatus    @default(none)
  creditUsed             Float           @default(0)
  orders                 Order[]
  stores                 Store[]
  approvedCreditAccounts CreditAccount[] @relation("Wholesaler")
  retailerCreditAccounts CreditAccount[] @relation("Retailer")
  notifications          Notification[]
}

model Notification {
  id        Int      @id @default(autoincrement())
  userId    Int
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model CreditAccount {
  id           Int          @id @default(autoincrement())
  wholesalerId Int
  retailerId   Int
  creditLimit  Float
  creditUsed   Float        @default(0)
  creditStatus CreditStatus @default(none)
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  wholesaler   User         @relation("Wholesaler", fields: [wholesalerId], references: [id], onDelete: Cascade)
  retailer     User         @relation("Retailer", fields: [retailerId], references: [id], onDelete: Cascade)

  @@unique([wholesalerId, retailerId])
}

model Store {
  id         Int        @id @default(autoincrement())
  name       String
  address    String
  ownerEmail String
  createdAt  DateTime   @default(now())
  categories Category[]
  products   Product[]
  orders     Order[]
  owner      User       @relation(fields: [ownerEmail], references: [email], onDelete: Cascade)
}

model Category {
  id        Int       @id @default(autoincrement())
  name      String
  storeId   Int
  createdAt DateTime  @default(now())
  store     Store     @relation(fields: [storeId], references: [id], onDelete: Cascade)
  products  Product[]
}

model Product {
  id         Int         @id @default(autoincrement())
  name       String
  price      Float
  unit       String
  stock      Int
  moq        Int
  active     Boolean     @default(true)
  storeId    Int
  categoryId Int
  createdAt  DateTime    @default(now())
  orderItems OrderItem[]
  store      Store       @relation(fields: [storeId], references: [id], onDelete: Cascade)
  category   Category    @relation(fields: [categoryId], references: [id], onDelete: Cascade)
}

model Order {
  id            Int         @id @default(autoincrement())
  retailerEmail String
  storeId       Int
  status        OrderStatus @default(pending)
  agentEarnings Float?      @default(0)
  totalAmount   Float
  agentEmail    String?
  createdAt     DateTime      @default(now())
  creditStatus  CreditStatus  @default(none)
  paymentMethod PaymentMethod @default(COD)
  paymentStatus PaymentStatus @default(unpaid)
  user          User          @relation(fields: [retailerEmail], references: [email], onDelete: Cascade)
  store         Store         @relation(fields: [storeId], references: [id], onDelete: Cascade)
  items         OrderItem[]
}

model OrderItem {
  id        Int     @id @default(autoincrement())
  orderId   Int
  productId Int
  price     Float
  quantity  Int
  subtotal  Float
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

enum PaymentMethod {
  COD
  ONLINE
  CREDIT
}

enum PaymentStatus {
  unpaid
  paid
}

enum CreditStatus {
  none
  requested
  approved
  rejected
  settled
}

enum OrderStatus {
  pending
  accepted
  dispatched
  delivered
  assigned
  rejected
}

enum Role {
  wholesaler
  retailer
  agent
}
